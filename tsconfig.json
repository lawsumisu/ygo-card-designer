{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "client/*":[
                "client/*"
            ]
        }
    },
    "include": [
        "client/**/*"
    ]
}